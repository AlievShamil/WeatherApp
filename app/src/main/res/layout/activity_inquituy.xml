<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="clickBtn"
        android:text="Button" />

    <EditText
        android:id="@+id/et_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="город..."
        android:inputType="textPersonName" />

    <Switch
        android:id="@+id/sw_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="Влажность" />

    <Switch
        android:id="@+id/sw_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sw_humidity"
        android:layout_alignStart="@+id/sw_humidity"
        android:layout_below="@+id/sw_humidity"
        android:layout_marginRight="10dp"
        android:text="Ветер" />

    <Switch
        android:id="@+id/sw_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sw_wind"
        android:layout_alignStart="@+id/sw_wind"
        android:layout_below="@+id/sw_wind"
        android:layout_marginRight="10dp"
        android:text="Температура" />

    <Switch
        android:id="@+id/sw_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sw_temp"
        android:layout_alignStart="@+id/sw_temp"
        android:layout_below="@+id/sw_temp"
        android:layout_marginRight="10dp"
        android:text="Погода" />

    <Switch
        android:id="@+id/sw_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sw_weather"
        android:layout_alignStart="@+id/sw_weather"
        android:layout_below="@+id/sw_weather"
        android:layout_marginRight="10dp"
        android:text="Давление" />

</RelativeLayout>